<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/song_item_layout"
    android:layout_marginTop="2dp"
    android:background="@drawable/item_selector"
    android:padding="5dp">

    <TextView
        android:textSize="25sp"
        android:textColor="#ADABAD"
        android:layout_gravity="center_vertical"
        android:id="@+id/song_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"

        android:gravity="center_vertical">
        <!--显示音频的块 -->
        <TextView
            android:textColor="#ADABAD"
            android:id="@+id/song_item_artist_tv"
            android:layout_weight="1"
            android:layout_width="0dp"

            android:layout_height="match_parent"/>
        <!--显示时长的块 -->
        <TextView
            android:textColor="#ADABAD"
            android:id="@+id/song_item_duration_tv"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right"/>         <!--文字在父容器居右，把时长放在最右侧 -->
    </LinearLayout>
<!--    <com.example.diffut.TextSwitchView-->
<!--        android:id="@+id/switchView"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content" />-->

</LinearLayout>